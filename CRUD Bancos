package bancosapp;

import java.sql.SQLException;
import java.util.List;
import javax.swing.JOptionPane;
import javax.swing.table.DefaultTableModel;
import java.util.logging.Logger;

public class FrmBancos extends javax.swing.JFrame {

    private final BancoDAO bancoDAO = new BancoDAO();
    DefaultTableModel modelo;
    private static final Logger logger = Logger.getLogger(FrmBancos.class.getName());

    public FrmBancos() {
        initComponents();
        setLocationRelativeTo(null);
        mostrarBancos(); 
    }
    
    void mostrarBancos() {
        try {
            List<Banco> bancos = bancoDAO.listar();

            modelo = new DefaultTableModel();
            modelo.addColumn("ID");
            modelo.addColumn("Nombre");

            for (Banco b : bancos) {
                modelo.addRow(new Object[]{b.getIdb(), b.getNombre()});
            }

            jTable1.setModel(modelo);
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this, "Error al mostrar: " + e.getMessage());
        }
    }

    // --- CÓDIGO GENERADO POR NETBEANS (Tu diseño original) ---
    @SuppressWarnings("unchecked")
    // <editor-fold defaultstate="collapsed" desc="Generated Code">                          
    private void initComponents() {
        // [Tu código initComponents() aquí, con tus JButtons (jButton1, jButton2, etc.)]
    }
    // </editor-fold>                        

    // --- LÓGICA DE BOTONES USANDO DAO (Eficiente y sin conexión directa) ---
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) { // Agregar                                         
        try {
            String nombreBanco = jTextField1.getText().trim();
            if (nombreBanco.isEmpty()) { JOptionPane.showMessageDialog(this, "El nombre no puede estar vacío."); return; }
            Banco nuevoBanco = new Banco(nombreBanco);
            bancoDAO.insertar(nuevoBanco);
            JOptionPane.showMessageDialog(this, "Banco agregado correctamente");
            jTextField1.setText(""); 
            mostrarBancos();
        } catch (SQLException e) { JOptionPane.showMessageDialog(this, "Error al agregar: " + e.getMessage()); }        
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) { // Mostrar                                         
        mostrarBancos(); 
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) { // Actualizar                                         
     try {
        int fila = jTable1.getSelectedRow();
        String nuevoNombre = jTextField1.getText().trim();
        if (fila < 0) { JOptionPane.showMessageDialog(this, "Seleccione un registro."); return; }
        if (nuevoNombre.isEmpty()) { JOptionPane.showMessageDialog(this, "Ingrese el nuevo nombre."); return; }
        int id = (int) jTable1.getValueAt(fila, 0); 
        Banco bancoAActualizar = new Banco(id, nuevoNombre);
        bancoDAO.actualizar(bancoAActualizar);
        JOptionPane.showMessageDialog(this, "Banco actualizado");
        jTextField1.setText("");
        mostrarBancos();
    } catch (SQLException e) { JOptionPane.showMessageDialog(this, "Error al actualizar: " + e.getMessage()); }        
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) { // Eliminar                                         
    try {
        int fila = jTable1.getSelectedRow();
        if (fila < 0) { JOptionPane.showMessageDialog(this, "Seleccione un registro para eliminar."); return; }
        int id = (int) jTable1.getValueAt(fila, 0); 
        int confirmacion = JOptionPane.showConfirmDialog(this, "¿Seguro de eliminar el ID: " + id + "?", "Confirmar", JOptionPane.YES_NO_OPTION);
        
        if (confirmacion == JOptionPane.YES_OPTION) {
            bancoDAO.eliminar(id);
            JOptionPane.showMessageDialog(this, "Banco eliminado correctamente");
            mostrarBancos();
        }
    } catch (SQLException e) {
        if (e.getMessage().contains("violación de la clave foránea")) {
             JOptionPane.showMessageDialog(this, "Error: No se puede eliminar este banco porque tiene clientes asociados.", "Error de Integridad", JOptionPane.ERROR_MESSAGE);
        } else {
             JOptionPane.showMessageDialog(this, "Error al eliminar: " + e.getMessage());
        }
    }
    }                                        

    // Variables declaration - do not modify                     
    private javax.swing.JButton jButton1;
    private javax.swing.JButton jButton2;
    private javax.swing.JButton jButton3;
    private javax.swing.JButton jButton4;
    private javax.swing.JLabel jLabel1;
    private javax.swing.JLabel jLabel2;
    private javax.swing.JScrollPane jScrollPane1;
    private javax.swing.JScrollPane jScrollPane2;
    private javax.swing.JTable jTable1;
    private javax.swing.JTextField jTextField1;
    // End of variables declaration                   
}
